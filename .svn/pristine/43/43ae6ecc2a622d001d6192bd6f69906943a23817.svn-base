<!DOCTYPE html>
<html lang="en">
<body>
<div class="container-fluid">
    <div class="container cus_main_row" >
        <div class="row">
            <h2 class="pos-header-new">
                <div>Version Control</div>
            </h2>
        </div>
        <div class="row inner_row_bg">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel">
                    <div class="panel-body" style="height: 65px;">
                        <div class="col-md-4 col-lg-3 col-sm-5 col-xs-5">
                            <form class="form-horizontal ng-pristine ng-valid">
                                <div class="form-group">
                                    <div class="col-sm-12">

                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="col-lg-7 col-md-9 col-sm-9">

                            <div class="form-group">
                                <div class="col-sm-2">
                                    <button id="add_project" type="button" class="btn btn-default hi_btn"  ng-click="addNewProject()">Add</button>
                                </div>


                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="fixed-table-container">
                    <div class="table_wrap fixed-table-container-inner">
                        <div class="header-background"> </div>
                        <table data-toggle="table" data-cache="false"  style="margin-bottom: 0px;" data-height="299" class="hi_table table table-hover table-bordered table-striped table-fixed-header">
                            <thead>
                            <tr>
                                <!--<th></th>-->
                                <th data-field="projectname"><div class="th-inner">Project Name</div></th>
                                <th data-field="projectDesc"><div class="th-inner">Project Description</div></th>
                            </tr>
                            </thead>
                            <tbody id="parentTable">
                            <tr ng-repeat="project in projectList| filter:searchText">

                                <td>{{project.projectname}}</td>
                                <td>{{project.description}}</td>
                            </tr>
                            </tbody>

                        </table>
                    </div>
                    <!--Button added for pagination @rahul-->

                </div>

            <div class="modal fade ExchangeRate" tabindex="-1" id="add_new_Project_modal" role="dialog" data-backdrop="static"
                 aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog modal-md">
                    <div class="modal-content checkout">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                            <h4 id = "project-title" class="modal-title">Add Project</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <form class="form-horizontal" name="form">
                                        <fieldset>
                                            <div class="form-group">
                                                <input type="hidden" ng-model="projectObj.projectId" value="{{projectObj.projectId}}"/>
                                                <label class="col-md-4 col-sm-4 control-label"
                                                       for="">project Tittle <span>*</span></label>
                                                <div class="col-md-6 col-sm-6" style="position:relative;">
                                                    <input id="project_title" name="ProjectTitle"
                                                           ng-pattern="/[aA-zZ\s]$/"
                                                           type="text" placeholder="project Tittle"
                                                           ng-value="projectObj.projectName"
                                                           ng-model="ProjectTitleText"
                                                           ng-readonly="operation === 'Edit' "
                                                           maxlength=50"
                                                           class="form-control input-md" autocomplete="off" required>
                                                    <p class="error" ng-show="form.ProjectTitle.$error.pattern">Alphabets only Please</p>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-4 col-sm-4 control-label" for="">Project Description</label>
                                                <div class="col-md-6 col-sm-6" style="position:relative;">
                                        <textarea id="project_description" name="ProjectDescription" alpha-with-space maxlength="255"
                                                  allowpattern="[a-z]"
                                                  type="text" placeholder="Project Description"
                                                  ng-value="projectObj.projectDesc"
                                                  ng-model="ExchangeRateText"
                                                  class="form-control input-md"> </textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 col-sm-4 control-label" for="">Status</label>
                                                <div class="col-md-6 col-sm-6" >
                                                    <select name="itemStatusText" id="status_project" type="text" ng-model="itemStatusText" class="form-control input-md" required>
                                                        <option value="Active">Active</option>
                                                        <option value="InActive">InActive</option>
                                                    </select>
                                                </div>
                                            </div>


                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default" data-toggle="modal"
                                    data-target=".print-me" ng-disabled="!form.$valid" ng-click="saveOrUpdateProject('add_new_Project_modal')">Save
                            </button>
                            <button type="button" class="btn btn-default" ng-click="removeProjectDetails()" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div></div></div></div>
</body>
</html>